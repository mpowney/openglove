{
  "ChatAgent": {
    "description": "Example config for the demo ChatAgent",
    "model": {
      "type": "OllamaModel",
      "baseUrl": "http://ollama.example.com:11434",
      "model": "llama3.2:1b",
      "temperature": 0.7,
      "maxTokens": 2048,
      "keepAlive": 600
    },
    "skillsModel": {
      "type": "OllamaModel",
      "baseUrl": "http://ollama.example.com:11434",
      "model": "olmo-3:7b-instruct",
      "temperature": 0,
      "maxTokens": 16384,
      "keepAlive": 600
    },
    "skillsPrompt": "You are a system agent helping to plan the next query to direct the assistant.  Filter the following list of skills to those relevant to the user's input. Be succinct, and don't list irrelevant skills. User Input: {prompt}.\n\nSkills: {skills-list}",
    "skills": { 
      "local": [ "SearxngWebSearchSkill", "TimeSkill", "MemoriesRetrievalSkill", "MemoriesKeepSkill" ],
      "socket": [ "WebBrowserSkill" ]
    },
    "channels": [
      {
        "type": "BlueBubblesChannel",
        "name": "myBlueBubbles",
        "emitRoles": ["assistant"],
        "opts": {
          "baseUrl": "http://bluebubbles.example.local:3000",
          "threadId": "example-thread-id",
          "apiKey": "REPLACE_WITH_KEY"
        }
      },
      {
        "type": "WebSocketChannel",
        "name": "webChat",
        "emitRoles": ["assistant", "user", "system", "supplementary"],
        "opts": {
          "streaming": false,
          "port": 8080,
          "host": "localhost"
        }
      },
      {
        "type": "ConsoleChannel",
        "name": "consoleChat",
        "emitRoles": ["assistant"],
        "opts": {
          "streaming": true
        }
      }
    ]
  }
}
