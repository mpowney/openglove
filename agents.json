{
  "ChatAgent": {
    "description": "Example config for the demo ChatAgent",
    "model": {
      "type": "OllamaModel",
      "baseUrl": "http://ollama.example.com:11434",
      "model": "llama3.2:1b",
      "temperature": 0.7,
      "maxTokens": 2048,
      "keepAlive": 600
    },
    "channels": [
      {
        "type": "BlueBubblesChannel",
        "name": "myBlueBubbles",
        "opts": {
          "baseUrl": "http://bluebubbles.example.local:3000",
          "threadId": "example-thread-id",
          "apiKey": "REPLACE_WITH_KEY"
        }
      },
      {
        "type": "WebSocketChannel",
        "name": "webChat",
        "opts": {
          "streaming": true,
          "port": 8080,
          "host": "localhost"
        }
      },
      {
        "type": "ConsoleChannel",
        "name": "consoleChat",
        "opts": {
          "streaming": true
        }
      }
    ]
  }
}
